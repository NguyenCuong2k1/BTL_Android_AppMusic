<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="8dp"
    android:layout_marginVertical="6dp"
    app:cardCornerRadius="8dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <ImageView
            android:id="@+id/imvBackgroundPlaylist"
            android:layout_width="match_parent"
            android:layout_height="168dp"
            android:scaleType="fitXY" />

        <View
            android:layout_width="match_parent"
            android:layout_height="168dp"
            android:background="@drawable/bg_banner" />

<!--        <ImageView-->
<!--            android:id="@+id/imvPlaylist"-->
<!--            android:layout_width="48dp"-->
<!--            android:layout_height="48dp"-->
<!--            android:layout_alignLeft="@id/imvBackgroundPlaylist"-->
<!--            android:layout_alignBottom="@id/imvBackgroundPlaylist"-->
<!--            android:layout_marginLeft="8dp"-->
<!--            android:layout_marginBottom="8dp"-->
<!--            android:elevation="6dp" />-->

        <androidx.cardview.widget.CardView
            android:id="@+id/cvPlaylist"
            app:cardCornerRadius="8dp"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_alignLeft="@id/imvBackgroundPlaylist"
            android:layout_alignBottom="@id/imvBackgroundPlaylist"
            android:layout_marginLeft="8dp"
            android:layout_marginBottom="8dp"
            android:elevation="10dp">

            <ImageView
                android:id="@+id/imvPlaylist"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:elevation="10dp" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/tvPlaylist"
            android:textColor="@color/white"
            android:layout_marginRight="48dp"
            android:maxLines="1"
            android:text="test"
            android:textSize="14sp"
            android:layout_toRightOf="@id/cvPlaylist"
            android:layout_marginLeft="4dp"
            android:layout_alignBottom="@id/imvBackgroundPlaylist"
            android:layout_marginBottom="4dp"
            android:ellipsize="end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


    </RelativeLayout>
</androidx.cardview.widget.CardView>
