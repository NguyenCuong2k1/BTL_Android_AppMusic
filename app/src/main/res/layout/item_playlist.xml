<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imvBackgroundPlaylist"
        android:layout_width="match_parent"
        android:layout_height="128dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="4dp"
        android:layout_marginRight="8dp"
        android:scaleType="fitXY" />

    <View
        android:layout_width="match_parent"
        android:layout_height="128dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="4dp"
        android:layout_marginRight="8dp"
        android:background="@drawable/bg_banner" />

    <ImageView
        android:id="@+id/imvPlaylist"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignLeft="@id/imvBackgroundPlaylist"
        android:layout_alignBottom="@id/imvBackgroundPlaylist"
        android:layout_marginLeft="8dp"
        android:layout_marginBottom="8dp"
        android:elevation="6dp" />

    <TextView
        android:id="@+id/tvPlaylist"
        android:textColor="@color/white"
        android:layout_marginRight="48dp"
        android:maxLines="1"
        android:text="test"
        android:textSize="13sp"
        android:layout_toRightOf="@id/imvPlaylist"
        android:layout_marginLeft="4dp"
        android:layout_alignBottom="@id/imvBackgroundPlaylist"
        android:layout_marginBottom="4dp"
        android:ellipsize="end"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


</RelativeLayout>